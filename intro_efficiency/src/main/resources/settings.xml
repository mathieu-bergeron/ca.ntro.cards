<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.ToggleButton ?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.intro.frontend.views.IntroEfficiencySettingsView" 
    styleClass="container"
    id="settings-view">

    <VBox 
        fx:id="leftSpace"
        HBox.hgrow="ALWAYS"
        styleClass="translucidSpace">
    </VBox>

    <VBox HBox.hgrow="ALWAYS">

        <Pane 
            fx:id="topSpace"
            VBox.vgrow="ALWAYS"
            styleClass="translucidSpace"/>

        <VBox
            fx:id="menuContainer"
            id="menu-container"
            VBox.vgrow="ALWAYS">

            <HBox>

            </HBox>

            <Button
                fx:id="quitButton"
                text="%quit">
            </Button>

        </VBox>

        <Pane 
            fx:id="bottomSpace"
            VBox.vgrow="ALWAYS"
            styleClass="translucidSpace"/>

    </VBox>

    <VBox 
        fx:id="rightSpace"
        HBox.hgrow="ALWAYS"
        styleClass="translucidSpace">
    </VBox>

</HBox>
