<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.Button ?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.demo.frontend.views.DemoDashboardView" 
    styleClass="container"
    id="dashboard-view">

    <VBox HBox.hgrow="ALWAYS">
    </VBox>

    <VBox styleClass="center-right">

        <VBox styleClass="vspace-small" >
        </VBox>

        <HBox styleClass="center-right">

            <Button
                text="%runCode"
                fx:id="playButton">
            </Button>

            <HBox styleClass="hspace-small">
            </HBox>

            <Button
                text="%pause"
                fx:id="pauseButton">
            </Button>

            <HBox styleClass="hspace-small">
            </HBox>

            <Button
                text="%oneStep"
                fx:id="oneStepButton">
            </Button>

        </HBox>

        <VBox styleClass="vspace-small" >
        </VBox>
           
        <HBox styleClass="center-right">
            <Label
                text="%numberOfCards"
                styleClass="text-big">
            </Label>

            <HBox styleClass="hspace-small">
            </HBox>

            <Label
                fx:id="numberOfCardsLabel"
                styleClass="text-big">
            </Label>

        </HBox>

        <VBox styleClass="vspace-small" >
        </VBox>

        <HBox styleClass="center-right">
            <Label
                text="%simpleOperations"
                styleClass="text-big">
            </Label>

            <HBox styleClass="hspace-small">
            </HBox>

            <Label
                fx:id="simpleOperationsLabel"
                styleClass="text-big">
            </Label>

        </HBox>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
    </VBox>

    <VBox styleClass="bottom-right">

        <Button
            text="â˜°"
            fx:id="menuButton">
        </Button>

        <Label
            fx:id="fpsLabel">
        </Label>

    </VBox>

</HBox>
