<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.ComboBox ?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.collections.FXCollections ?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.naivesort.frontend.views.NaivesortSelectionsView" 
    id="selections-view">

    <HBox VBox.vgrow="ALWAYS" styleClass="bottom">

        <HBox HBox.hgrow="ALWAYS" 
              fx:id="idContainer"
              styleClass="bottom-left">

            <Label
                text="%testCaseId"
                styleClass="text-big">
            </Label>

        </HBox>

        <Pane  style="hspace-tiny" />

        <HBox HBox.hgrow="ALWAYS"  
              fx:id="sizeContainer"
              styleClass="bottom-left">

            <Label
                text="%testCaseSize"
                styleClass="text-big">
            </Label>

        </HBox>

        <Pane  style="hspace-tiny" />

        <HBox HBox.hgrow="ALWAYS"  
              fx:id="manualContainer"
              styleClass="bottom-left">

            <Label
                text="%testCaseOnScreen"
                styleClass="text-big">
            </Label>

        </HBox>

        <Pane  style="hspace-tiny" />

        <HBox HBox.hgrow="ALWAYS"  
              fx:id="codeContainer"
              styleClass="bottom-left">

            <Label
                text="%testCaseInTheCode"
                styleClass="text-big">
            </Label>

        </HBox>

        <Pane  style="hspace-tiny" />

        <HBox HBox.hgrow="ALWAYS"  
              fx:id="solutionContainer"
              styleClass="bottom-left">

            <Label
                text="%testCaseSolution"
                styleClass="text-big">
            </Label>

        </HBox>


    </HBox>

    <ScrollPane HBox.hgrow="ALWAYS" 
                fitToWidth="true" 
                styleClass="test-case-container">
        <VBox
            fx:id="testCaseContainer"
            styleClass="container">
        </VBox>
    </ScrollPane>

    <HBox styleClass="bottom-right">

        <VBox>

            <Label
                text="%categories"
                fx:id="categoriesLabel"
                styleClass="text-big">
            </Label>


            <ComboBox>
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="exemples" />
                    <String fx:value="alÃ©atoire" />
            </FXCollections>
            </items>
            </ComboBox>

        </VBox>
    </HBox>



</VBox>
