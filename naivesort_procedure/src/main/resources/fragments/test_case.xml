<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.Button ?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.naivesort.frontend.views.fragments.NaivesortTestCaseFragment" 
    id="test-case-fragment">

    <HBox HBox.hgrow="ALWAYS" 
          fx:id="idContainer"
          styleClass="bottom-left">

        <Label 
            fx:id="testCaseIdLabel">
         </Label>

     </HBox>

    <Pane style="hspace-tiny" />

    <HBox HBox.hgrow="ALWAYS" 
          fx:id="sizeContainer"
          styleClass="bottom-left">

        <Label 
            fx:id="inputSizeLabel">
         </Label>

     </HBox>

    <Pane style="hspace-tiny" />

    <HBox HBox.hgrow="ALWAYS" 
          fx:id="manualContainer"
          styleClass="bottom-left">

        <Button 
            fx:id="manualButton">
         </Button>

     </HBox>

    <Pane style="hspace-tiny" />

    <HBox HBox.hgrow="ALWAYS" 
          fx:id="codeContainer"
          styleClass="bottom-left">

        <Button 
            fx:id="codeButton">
         </Button>

     </HBox>

    <Pane style="hspace-tiny" />

    <HBox HBox.hgrow="ALWAYS" 
          fx:id="solutionContainer"
          styleClass="bottom-left">

        <Button 
            fx:id="solutionButton">
         </Button>


     </HBox>


</HBox>
