<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.Pane ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.Button ?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.naivesort.frontend.views.fragments.NaivesortTestCaseFragment" 
    VBox.vgrow="ALWAYS"
    id="test-case-fragment">

    <Pane VBox.vgrow="ALWAYS" styleClass="vspace-tiny" />

    <Pane>

        <HBox fx:id="idContainer" styleClass="left">
            <Label 
                fx:id="testCaseIdLabel">
             </Label>
        </HBox>

        <HBox fx:id="sizeContainer" styleClass="left">
            <Label 
                fx:id="inputSizeLabel">
             </Label>
         </HBox>

        <HBox fx:id="manualContainer" styleClass="left">
            <Button 
                fx:id="manualButton">
             </Button>
        </HBox>

        <HBox fx:id="codeContainer" styleClass="left">
            <Button 
                fx:id="codeButton">
             </Button>
        </HBox>

        <HBox fx:id="solutionContainer" styleClass="left">
            <Button 
                fx:id="solutionButton">
             </Button>
        </HBox>
    </Pane>

    <Pane VBox.vgrow="ALWAYS" styleClass="vspace-tiny" />

</VBox>
