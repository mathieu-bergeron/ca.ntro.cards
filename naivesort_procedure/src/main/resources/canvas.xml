<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.StackPane ?>
<?import javafx.scene.control.Button ?>

<?import ca.ntro.cards.naivesort.frontend.views.controls.NaivesortPreviewCanvas ?>
<?import ca.ntro.cards.naivesort.frontend.views.controls.NaivesortMainCanvas ?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.naivesort.frontend.views.NaivesortCardsView" 
    fx:id="cardsViewContainer"
    styleClass="container"
    id="cards-view">

    <NaivesortMainCanvas
        fx:id="mainCanvas"
        VBox.vgrow="ALWAYS"
        styleClass="container">
    </NaivesortMainCanvas>

    <HBox>

        <NaivesortPreviewCanvas
            fx:id="previewCanvas"
            VBox.vgrow="ALWAYS"
            styleClass="container">
        </NaivesortPreviewCanvas>

        <StackPane
            fx:id="dashboardContainer"
            HBox.hgrow="ALWAYS"
            styleClass="container"
            id="dashboard-container">
        </StackPane>

    </HBox>

</VBox>
