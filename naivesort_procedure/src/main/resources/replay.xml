<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.Button ?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.ntro.cards.naivesort.frontend.views.NaivesortReplayView" 
    id="replay-view">

    <HBox styleClass="center">

        <Button
            text="%backStep"
            fx:id="backStepButton">
        </Button>

        <HBox styleClass="hspace-small">
        </HBox>

        <Button
            text="%runCode"
            fx:id="playButton">
        </Button>

        <HBox styleClass="hspace-small">
        </HBox>

        <Button
            text="%pause"
            fx:id="pauseButton">
        </Button>

        <HBox styleClass="hspace-small">
        </HBox>

        <Button
            text="%oneStep"
            fx:id="oneStepButton">
        </Button>

    </HBox>

    <VBox styleClass="vspace-small" >
    </VBox>
           
    <HBox styleClass="center">
        <Label
            text="%numberOfCards"
            styleClass="text-big">
        </Label>

        <HBox styleClass="hspace-small">
        </HBox>

        <Label
            fx:id="numberOfCardsLabel"
            styleClass="text-big">
        </Label>

    </HBox>

    <VBox styleClass="vspace-small" >
    </VBox>

    <HBox styleClass="center">

        <Label
            text="%numberOfSteps"
            styleClass="text-big">
        </Label>

        <HBox styleClass="hspace-small">
        </HBox>

        <Label
            fx:id="currentStepLabel"
            styleClass="text-big">
        </Label>

        <Label
            text=" / "
            styleClass="text-big">
        </Label>

        <Label
            fx:id="numberOfStepsLabel"
            styleClass="text-big">
        </Label>

    </HBox>

</VBox>
